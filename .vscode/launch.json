    "version": "0.2.0",    
    "configurations": [
        {
            "type": "node",            
            "request": "launch",
            "name": "Debug some test with ts-jest",
            "skipFiles": [
                "<node_internals>/**"
            ],
            
            "runtimeExecutable": "npx", 
            "runtimeArgs": ["jest",  "./__tests__/${fileBasename}"], 
            "internalConsoleOptions": "neverOpen", 
            "console": "integratedTerminal"
        }, 
        {
            "type": "node",            
            "request": "launch",
            "name": "Debug all tests with ts-jest",
            "skipFiles": [
                "<node_internals>/**"
            ],
            
            "runtimeExecutable": "npx", 
            "runtimeArgs": ["jest"], 
            "internalConsoleOptions": "neverOpen", 
            "console": "integratedTerminal"
        }
    ]
}


